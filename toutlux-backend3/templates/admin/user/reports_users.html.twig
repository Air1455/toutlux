{% extends '@EasyAdmin/page/content.html.twig' %}
{% block page_title %}Rapport Utilisateurs{% endblock %}
{% block page_content %}
    <div class="container">
        <h2>Rapport détaillé des utilisateurs</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Email</th>
                <th>Score de confiance</th>
                <th>Inscrit le</th>
                <th>Profil complet</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.trustScore }}</td>
                    <td>{{ user.createdAt|date('d/m/Y') }}</td>
                    <td>
                        {% set profile = user.profile %}
                        {% if profile.personalInfoValidated and profile.identityValidated and profile.financialValidated and profile.termsAccepted %}
                            <span class="badge bg-success">Oui</span>
                        {% else %}
                            <span class="badge bg-danger">Non</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
