{% extends '@EasyAdmin/page/content.html.twig' %}
{% block page_title %}Templates d'emails{% endblock %}
{% block page_content %}
    <div class="container">
        <h2>Modèles d'emails</h2>
        <ul class="list-group">
            {% for tpl in templates %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
                <strong>{{ tpl.subject }}</strong> <br>
                <small class="text-muted">{{ tpl.name }}</small>
            </span>
                    <a href="#" class="btn btn-sm btn-outline-info" disabled>Prévisualiser</a>
                </li>
            {% endfor %}
        </ul>
        <p class="mt-3 text-muted">L'édition des templates se fait côté code source.</p>
    </div>
{% endblock %}
