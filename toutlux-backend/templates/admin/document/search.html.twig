{% extends 'base_admin.html.twig' %}

{% block title %}Recherche de documents - Admin TOUTLUX{% endblock %}

{% block page_title %}
    <i class="fas fa-search"></i> Recherche avancée de documents
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
        <li class="breadcrumb-item active">Recherche documents</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- Formulaire de recherche -->
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Critères de recherche</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form id="searchForm" method="get" action="{{ path('admin_document_search') }}">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Utilisateur</label>
                                    <select class="form-control select2" name="user" id="userFilter">
                                        <option value="">Tous les utilisateurs</option>
                                        {% for user in users %}
                                            <option value="{{ user.id }}" {{ app.request.get('user') == user.id ? 'selected' : '' }}>
                                                {{ user.fullName }} ({{ user.email }})
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Type de document</label>
                                    <select class="form-control" name="type" multiple id="typeFilter">
                                        <option value="IDENTITY_CARD" {{ 'IDENTITY_CARD' in app.request.get('type', []) ? 'selected' : '' }}>Carte d'identité</option>
                                        <option value="PASSPORT" {{ 'PASSPORT' in app.request.get('type', []) ? 'selected' : '' }}>Passeport</option>
                                        <option value="DRIVER_LICENSE" {{ 'DRIVER_LICENSE' in app.request.get('type', []) ? 'selected' : '' }}>Permis de conduire</option>
                                        <option value="BANK_STATEMENT" {{ 'BANK_STATEMENT' in app.request.get('type', []) ? 'selected' : '' }}>Relevé bancaire</option>
                                        <option value="PAYSLIP" {{ 'PAYSLIP' in app.request.get('type', []) ? 'selected' : '' }}>Fiche de paie</option>
                                        <option value="TAX_NOTICE" {{ 'TAX_NOTICE' in app.request.get('type', []) ? 'selected' : '' }}>Avis d'imposition</option>
                                        <option value="PROOF_OF_ADDRESS" {{ 'PROOF_OF_ADDRESS' in app.request.get('type', []) ? 'selected' : '' }}>Justificatif de domicile</option>
                                        <option value="SELFIE" {{ 'SELFIE' in app.request.get('type', []) ? 'selected' : '' }}>Selfie</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Statut</label>
                                    <select class="form-control" name="status" id="statusFilter">
                                        <option value="">Tous les statuts</option>
                                        <option value="PENDING" {{ app.request.get('status') == 'PENDING' ? 'selected' : '' }}>En attente</option>
                                        <option value="APPROVED" {{ app.request.get('status') == 'APPROVED' ? 'selected' : '' }}>Approuvé</option>
                                        <option value="REJECTED" {{ app.request.get('status') == 'REJECTED' ? 'selected' : '' }}>Rejeté</option>
                                        <option value="EXPIRED" {{ app.request.get('status') == 'EXPIRED' ? 'selected' : '' }}>Expiré</option>
                                        <option value="expiring" {{ app.request.get('status') == 'expiring' ? 'selected' : '' }}>Expire bientôt</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Date d'upload (début)</label>
                                    <input type="date" class="form-control" name="uploadDateStart"
                                           value="{{ app.request.get('uploadDateStart') }}">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Date d'upload (fin)</label>
                                    <input type="date" class="form-control" name="uploadDateEnd"
                                           value="{{ app.request.get('uploadDateEnd') }}">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Validé par</label>
                                    <select class="form-control" name="validator">
                                        <option value="">Tous les validateurs</option>
                                        {% for validator in validators %}
                                            <option value="{{ validator.id }}" {{ app.request.get('validator') == validator.id ? 'selected' : '' }}>
                                                {{ validator.fullName }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Nom du fichier</label>
                                    <input type="text" class="form-control" name="filename"
                                           placeholder="Rechercher dans le nom..."
                                           value="{{ app.request.get('filename') }}">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Rechercher
                                </button>
                                <button type="button" class="btn btn-default" id="resetSearch">
                                    <i class="fas fa-redo"></i> Réinitialiser
                                </button>
                                <button type="button" class="btn btn-success float-right" id="exportResults">
                                    <i class="fas fa-download"></i> Exporter les résultats
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Résultats de recherche -->
    {% if documents is defined %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Résultats de recherche
                            <span class="badge badge-primary">{{ documents|length }} document(s)</span>
                        </h3>
                        <div class="card-tools">
                            {% if documents|length > 0 %}
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-default" id="selectAllResults">
                                        <i class="fas fa-check-square"></i> Tout sélectionner
                                    </button>
                                    <button class="btn btn-sm btn-danger" id="bulkDelete" style="display: none;">
                                        <i class="fas fa-trash"></i> Supprimer la sélection
                                    </button>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-body">
                        {% if documents|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th style="width: 30px">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="checkAll">
                                                <label class="custom-control-label" for="checkAll"></label>
                                            </div>
                                        </th>
                                        <th>Aperçu</th>
                                        <th>Type</th>
                                        <th>Utilisateur</th>
                                        <th>Statut</th>
                                        <th>Date d'upload</th>
                                        <th>Validé par</th>
                                        <th>Expire le</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for document in documents %}
                                        <tr>
                                            <td>
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input doc-checkbox"
                                                           id="doc{{ document.id }}" value="{{ document.id }}">
                                                    <label class="custom-control-label" for="doc{{ document.id }}"></label>
                                                </div>
                                            </td>
                                            <td>
                                                {% if document.mimeType starts with 'image/' %}
                                                    <img src="{{ asset('uploads/documents/' ~ document.filename) }}"
                                                         class="img-thumbnail"
                                                         style="width: 50px; height: 50px; object-fit: cover; cursor: pointer;"
                                                         data-toggle="modal"
                                                         data-target="#previewModal"
                                                         data-src="{{ asset('uploads/documents/' ~ document.filename) }}">
                                                {% else %}
                                                    <div class="img-thumbnail d-flex align-items-center justify-content-center"
                                                         style="width: 50px; height: 50px;">
                                                        <i class="fas fa-file text-muted"></i>
                                                    </div>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if document.type == 'IDENTITY_CARD' %}
                                                    <i class="fas fa-id-card"></i> Carte d'identité
                                                {% elseif document.type == 'PASSPORT' %}
                                                    <i class="fas fa-passport"></i> Passeport
                                                {% elseif document.type == 'DRIVER_LICENSE' %}
                                                    <i class="fas fa-car"></i> Permis
                                                {% elseif document.type == 'BANK_STATEMENT' %}
                                                    <i class="fas fa-university"></i> Relevé bancaire
                                                {% elseif document.type == 'PAYSLIP' %}
                                                    <i class="fas fa-money-check"></i> Fiche de paie
                                                {% elseif document.type == 'TAX_NOTICE' %}
                                                    <i class="fas fa-file-invoice-dollar"></i> Avis d'imposition
                                                {% elseif document.type == 'PROOF_OF_ADDRESS' %}
                                                    <i class="fas fa-home"></i> Justif. domicile
                                                {% elseif document.type == 'SELFIE' %}
                                                    <i class="fas fa-camera"></i> Selfie
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('admin_user_show', {'id': document.user.id}) }}">
                                                    {{ document.user.fullName }}
                                                </a>
                                            </td>
                                            <td>
                                                {% if document.status == 'APPROVED' %}
                                                    <span class="badge badge-success">Approuvé</span>
                                                {% elseif document.status == 'REJECTED' %}
                                                    <span class="badge badge-danger">Rejeté</span>
                                                {% elseif document.status == 'EXPIRED' %}
                                                    <span class="badge badge-secondary">Expiré</span>
                                                {% else %}
                                                    <span class="badge badge-warning">En attente</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ document.uploadedAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                {% if document.validatedBy %}
                                                    {{ document.validatedBy.fullName }}
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if document.expiresAt %}
                                                    {% set daysUntilExpiry = date(document.expiresAt).diff(date()).days %}
                                                    <span class="{% if daysUntilExpiry < 30 %}text-danger{% elseif daysUntilExpiry < 90 %}text-warning{% endif %}">
                                                            {{ document.expiresAt|date('d/m/Y') }}
                                                        {% if daysUntilExpiry < 30 %}
                                                            <br><small>({{ daysUntilExpiry }} jours)</small>
                                                        {% endif %}
                                                        </span>
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    {% if document.status == 'PENDING' %}
                                                        <a href="{{ path('admin_document_validate', {'id': document.id}) }}"
                                                           class="btn btn-primary" title="Valider">
                                                            <i class="fas fa-check"></i>
                                                        </a>
                                                    {% endif %}
                                                    <a href="{{ asset('uploads/documents/' ~ document.filename) }}"
                                                       class="btn btn-info" download title="Télécharger">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    <button class="btn btn-danger delete-document"
                                                            data-id="{{ document.id }}" title="Supprimer">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            {% if totalPages > 1 %}
                                <div class="mt-3">
                                    {% include 'components/_pagination.html.twig' with {
                                        'currentPage': currentPage,
                                        'totalPages': totalPages,
                                        'route': 'admin_document_search',
                                        'routeParams': app.request.query.all
                                    } %}
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                Aucun document ne correspond à vos critères de recherche.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Modal preview -->
    <div class="modal fade" id="previewModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Aperçu du document</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img src="" id="modalImage" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block extra_javascripts %}
    <script>
        $(document).ready(function() {
            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap4',
                placeholder: 'Sélectionnez un utilisateur',
                allowClear: true
            });

            $('#typeFilter').select2({
                theme: 'bootstrap4',
                placeholder: 'Sélectionnez les types',
                closeOnSelect: false
            });

            // Reset form
            $('#resetSearch').click(function() {
                $('#searchForm')[0].reset();
                $('.select2').val(null).trigger('change');
                $('#typeFilter').val(null).trigger('change');
            });

            // Export results
            $('#exportResults').click(function() {
                const params = new URLSearchParams($('#searchForm').serialize());
                params.append('export', 'csv');
                window.open('{{ path('admin_document_search') }}?' + params.toString());
            });

            // Select all
            $('#checkAll, #selectAllResults').click(function() {
                $('.doc-checkbox').prop('checked', !$('.doc-checkbox').prop('checked'));
                updateBulkActions();
            });

            $('.doc-checkbox').change(function() {
                updateBulkActions();
            });

            function updateBulkActions() {
                const checkedCount = $('.doc-checkbox:checked').length;
                if (checkedCount > 0) {
                    $('#bulkDelete').show();
                    $('#bulkDelete').text(`Supprimer (${checkedCount})`);
                } else {
                    $('#bulkDelete').hide();
                }
            }

            // Bulk delete
            $('#bulkDelete').click(function() {
                if (confirm('Supprimer les documents sélectionnés ?')) {
                    const ids = $('.doc-checkbox:checked').map(function() {
                        return $(this).val();
                    }).get();

                    $.post('{{ path('admin_document_bulk_delete') }}', {
                        ids: ids,
                        _token: '{{ csrf_token('bulk_delete') }}'
                    })
                        .done(function() {
                            location.reload();
                        })
                        .fail(function() {
                            alert('Erreur lors de la suppression');
                        });
                }
            });

            // Individual delete
            $('.delete-document').click(function() {
                if (confirm('Supprimer ce document ?')) {
                    const documentId = $(this).data('id');
                    $.post('{{ path('admin_document_delete') }}', {
                        id: documentId,
                        _token: '{{ csrf_token('delete_document') }}'
                    })
                        .done(function() {
                            location.reload();
                        });
                }
            });

            // Preview modal
            $('img[data-toggle="modal"]').click(function() {
                const src = $(this).data('src');
                $('#modalImage').attr('src', src);
            });
        });
    </script>
{% endblock %}
