{% extends '@EasyAdmin/page/content.html.twig' %}
{% block page_title %}Logs d'activité{% endblock %}
{% block page_content %}
    <div class="container">
        <h2>Logs d'activité</h2>
        <table class="table table-sm table-striped">
            <thead>
            <tr>
                <th>Date</th>
                <th>Utilisateur</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.date }}</td>
                    <td>{{ log.user }}</td>
                    <td>{{ log.action }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <p class="text-muted">Pour un vrai suivi, utilisez Monolog ou une table dédiée.</p>
    </div>
{% endblock %}
