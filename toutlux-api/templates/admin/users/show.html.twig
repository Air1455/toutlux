{% extends 'admin/base.html.twig' %}

{% block page_title %}{{ user.displayName }}{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_users') }}">Utilisateurs</a></li>
            <li class="breadcrumb-item active">{{ user.displayName }}</li>
        </ol>
    </nav>
{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-md-8">
            <!-- Informations principales - UTILISE TES MÉTHODES EXISTANTES -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>{{ user.displayName }}
                    </h5>
                    <div>
                    <span class="badge bg-{{ user.status == 'active' ? 'success' : (user.status == 'suspended' ? 'danger' : 'warning') }} fs-6">
                        {{ user.status|title }}
                    </span>
                        {% if user.isFullyVerified %}
                            <span class="badge bg-success ms-2">
                            <i class="fas fa-shield-check"></i> Vérifié
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-3">
                            {% if user.profilePicture %}
                                <img src="{{ user.profilePicture }}" class="rounded-circle mb-3" width="100" height="100">
                            {% else %}
                                <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                                    <i class="fas fa-user fa-3x text-white"></i>
                                </div>
                            {% endif %}
                            <h5>{{ user.displayName }}</h5>
                            {% if user.userType %}
                                <span class="badge bg-info">{{ user.userType }}</span>
                            {% endif %}

                            <!-- Score de vérification avec ta méthode existante -->
                            <div class="mt-3">
                                <div class="text-center">
                                    <div class="h4 text-primary">{{ user.verificationScore }}%</div>
                                    <small class="text-muted">Score de vérification</small>
                                    <div class="progress mt-2" style="height: 8px;">
                                        <div class="progress-bar" role="progressbar" style="width: {{ user.verificationScore }}%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="30%">Email :</th>
                                    <td>
                                        {{ user.email }}
                                        {% if user.isEmailVerified %}
                                            <i class="fas fa-check-circle text-success ms-2"></i>
                                        {% else %}
                                            <i class="fas fa-times-circle text-danger ms-2"></i>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Téléphone :</th>
                                    <td>
                                        {% if user.phoneNumber %}
                                            +{{ user.phoneNumberIndicatif }} {{ user.phoneNumber }}
                                            {% if user.isPhoneVerified %}
                                                <i class="fas fa-check-circle text-success ms-2"></i>
                                            {% else %}
                                                <i class="fas fa-times-circle text-danger ms-2"></i>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">Non renseigné</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Occupation :</th>
                                    <td>{{ user.occupation ?? 'Non renseignée' }}</td>
                                </tr>
                                <tr>
                                    <th>Inscrit le :</th>
                                    <td>{{ user.createdAt|date('d/m/Y à H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Annonces :</th>
                                    <td>{{ user.housesCount }} annonce(s)</td>
                                </tr>
                                <tr>
                                    <th>Profil complet :</th>
                                    <td>
                                        {% if user.isProfileComplete %}
                                            <span class="badge bg-success">✓ Complet</span>
                                        {% else %}
                                            <span class="badge bg-warning">{{ user.completionPercentage }}% complété</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Documents - UTILISE TA MÉTHODE documentsStatus -->
            {% set docs = user.documentsStatus %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>Documents
                        {% if user.pendingValidationsCount > 0 %}
                            <span class="badge bg-warning">{{ user.pendingValidationsCount }} en attente</span>
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Documents d'identité -->
                        <div class="col-md-6">
                            <h6>Documents d'identité</h6>
                            {% if docs.identity.submitted %}
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Type : {{ docs.identity.type ?? 'Non spécifié' }}</span>
                                        {% if docs.identity.verified %}
                                            <span class="badge bg-success">Vérifié le {{ docs.identity.verified_at|date('d/m/Y') }}</span>
                                        {% else %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% endif %}
                                    </div>
                                    {% if user.identityCard %}
                                        <div class="mt-2">
                                            <a href="{{ user.identityCard }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> Voir pièce d'identité
                                            </a>
                                        </div>
                                    {% endif %}
                                    {% if user.selfieWithId %}
                                        <div class="mt-2">
                                            <a href="{{ user.selfieWithId }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-camera"></i> Voir selfie avec ID
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>
                            {% else %}
                                <p class="text-muted">Aucun document d'identité soumis</p>
                            {% endif %}
                        </div>

                        <!-- Documents financiers -->
                        <div class="col-md-6">
                            <h6>Documents financiers</h6>
                            {% if docs.financial.submitted %}
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Source : {{ docs.financial.income_source ?? 'Non spécifiée' }}</span>
                                        {% if docs.financial.verified %}
                                            <span class="badge bg-success">Vérifié le {{ docs.financial.verified_at|date('d/m/Y') }}</span>
                                        {% else %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% endif %}
                                    </div>
                                    {% if docs.financial.income_proof and user.incomeProof %}
                                        <div class="mt-2">
                                            <a href="{{ user.incomeProof }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-file-invoice-dollar"></i> Justificatif revenus
                                            </a>
                                        </div>
                                    {% endif %}
                                    {% if docs.financial.ownership_proof and user.ownershipProof %}
                                        <div class="mt-2">
                                            <a href="{{ user.ownershipProof }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-home"></i> Preuve propriété
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>
                            {% else %}
                                <p class="text-muted">Aucun document financier soumis</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Actions -->
        <div class="col-md-4">
            <!-- Actions rapides -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Validation email -->
                    {% if not user.isEmailVerified %}
                        <form method="post" action="{{ path('admin_user_approve_email', {id: user.id}) }}" class="mb-2">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Valider l\'email de cet utilisateur ?')">
                                <i class="fas fa-envelope-check"></i> Valider l'email
                            </button>
                        </form>
                    {% endif %}

                    <!-- Validation documents - UTILISE TES MÉTHODES EXISTANTES -->
                    {% if user.hasPendingIdentityValidation or user.hasPendingFinancialValidation %}
                        <form method="post" action="{{ path('admin_user_approve_documents', {id: user.id}) }}" class="mb-2">
                            <button type="submit" class="btn btn-primary w-100" onclick="return confirm('Approuver les documents de cet utilisateur ?')">
                                <i class="fas fa-file-check"></i> Approuver documents
                            </button>
                        </form>
                    {% endif %}

                    <!-- Actions selon le statut -->
                    {% if user.status != 'suspended' %}
                        <button type="button" class="btn btn-warning w-100 mb-2" data-bs-toggle="modal" data-bs-target="#suspendModal">
                            <i class="fas fa-ban"></i> Suspendre
                        </button>
                    {% else %}
                        <form method="post" action="{{ path('admin_user_activate', {id: user.id}) }}" class="mb-2">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Réactiver cet utilisateur ?')">
                                <i class="fas fa-check"></i> Réactiver
                            </button>
                        </form>
                    {% endif %}

                    <hr>

                    <a href="{{ path('admin_messages') }}?user={{ user.id }}" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-envelope"></i> Messages
                    </a>
                </div>
            </div>

            <!-- Statut détaillé - UTILISE TA MÉTHODE validationStatus -->
            {% set validation = user.validationStatus %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-check me-2"></i>État des vérifications
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Email</span>
                            {% if validation.email.isVerified %}
                                <span class="badge bg-success">✓</span>
                            {% else %}
                                <span class="badge bg-danger">✗</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Téléphone</span>
                            {% if validation.phone.isVerified %}
                                <span class="badge bg-success">✓</span>
                            {% else %}
                                <span class="badge bg-danger">✗</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Identité</span>
                            {% if validation.identity.isVerified %}
                                <span class="badge bg-success">✓</span>
                            {% else %}
                                <span class="badge bg-danger">✗</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Documents financiers</span>
                            {% if validation.financialDocs.isVerified %}
                                <span class="badge bg-success">✓</span>
                            {% else %}
                                <span class="badge bg-danger">✗</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Conditions acceptées</span>
                            {% if validation.terms.accepted %}
                                <span class="badge bg-success">✓</span>
                            {% else %}
                                <span class="badge bg-danger">✗</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de suspension (identique) -->
    <div class="modal fade" id="suspendModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Suspendre l'utilisateur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" action="{{ path('admin_user_suspend', {id: user.id}) }}">
                    <div class="modal-body">
                        <p>Êtes-vous sûr de vouloir suspendre <strong>{{ user.displayName }}</strong> ?</p>
                        <div class="mb-3">
                            <label for="reason" class="form-label">Raison de la suspension :</label>
                            <textarea class="form-control" id="reason" name="reason" rows="3" placeholder="Expliquez pourquoi cet utilisateur est suspendu..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-warning">Suspendre</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
