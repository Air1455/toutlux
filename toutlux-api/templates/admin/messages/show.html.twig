{% extends 'admin/base.html.twig' %}

{% block title %}Message de {{ message.sender ? message.sender.displayName : 'Système' }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('admin_messages_index') }}">Messages</a></li>
                        <li class="breadcrumb-item active">{{ message.subject ?: 'Sans sujet' }}</li>
                    </ol>
                </nav>

                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible">
                        {% for flash_message in messages %}
                            {{ flash_message }}
                        {% endfor %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <div class="row">
                    <div class="col-lg-8">
                        {# Message principal #}
                        <div class="card mb-4">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">{{ message.subject ?: 'Sans sujet' }}</h5>
                                    <div>
                                        {% if not message.metadata.processed|default(false) %}
                                            <form method="post" action="{{ path('admin_messages_mark_processed', {id: message.id}) }}" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="fas fa-check"></i> Marquer traité
                                                </button>
                                            </form>
                                        {% endif %}
                                        <form method="post" action="{{ path('admin_messages_delete', {id: message.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr ?')">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    {% if message.sender %}
                                        <div class="me-3">
                                            {% if message.sender.profilePicture %}
                                                <img src="{{ message.sender.profilePicture }}" alt="" class="rounded-circle" width="48" height="48">
                                            {% else %}
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 48px; height: 48px;">
                                                    {{ message.sender.firstName|first|upper }}{{ message.sender.lastName|first|upper }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <div class="fw-medium">{{ message.sender.displayName }}</div>
                                            <small class="text-muted">{{ message.sender.email }}</small>
                                            <div><small class="text-muted">{{ message.createdAt|date('d/m/Y à H:i') }}</small></div>
                                        </div>
                                    {% else %}
                                        <div>
                                            <div class="fw-medium">Message système</div>
                                            <small class="text-muted">{{ message.createdAt|date('d/m/Y à H:i') }}</small>
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="message-content">
                                    {{ message.content|nl2br }}
                                </div>

                                {% if message.metadata is not empty %}
                                    <div class="mt-3 pt-3 border-top">
                                        <small class="text-muted">
                                            <strong>Métadonnées:</strong>
                                            {% for key, value in message.metadata %}
                                                <span class="badge bg-light text-dark me-1">{{ key }}: {{ value }}</span>
                                            {% endfor %}
                                        </small>
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        {# Formulaire de réponse #}
                        {% if message.sender %}
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-reply"></i> Répondre à {{ message.sender.displayName }}
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form method="post" action="{{ path('admin_messages_reply', {id: message.id}) }}">
                                        <div class="mb-3">
                                            <label for="subject" class="form-label">Sujet</label>
                                            <input type="text" class="form-control" id="subject" name="subject"
                                                   value="Re: {{ message.subject ?: 'Votre message' }}">
                                        </div>

                                        <div class="mb-3">
                                            <label for="content" class="form-label">Message *</label>
                                            <textarea class="form-control" id="content" name="content" rows="6" required
                                                      placeholder="Tapez votre réponse ici..."></textarea>
                                        </div>

                                        <div class="mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="send_email" name="send_email" value="1" checked>
                                                <label class="form-check-label" for="send_email">
                                                    Envoyer aussi par email
                                                </label>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-paper-plane"></i> Envoyer la réponse
                                            </button>
                                            <a href="{{ path('admin_messages_index') }}" class="btn btn-secondary">Retour</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <div class="col-lg-4">
                        {% if message.sender %}
                            {# Informations sur l'expéditeur #}
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Informations utilisateur</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2"><strong>Nom:</strong> {{ message.sender.displayName }}</div>
                                    <div class="mb-2"><strong>Email:</strong> {{ message.sender.email }}</div>
                                    <div class="mb-2"><strong>Type:</strong> {{ message.sender.userType|default('Non spécifié') }}</div>
                                    <div class="mb-2"><strong>Inscrit le:</strong> {{ message.sender.createdAt|date('d/m/Y') }}</div>

                                    <div class="mb-2">
                                        <strong>Vérifications:</strong>
                                        <div class="mt-1">
                                        <span class="badge bg-{{ message.sender.isEmailVerified ? 'success' : 'secondary' }}">
                                            Email {{ message.sender.isEmailVerified ? '✓' : '✗' }}
                                        </span>
                                            <span class="badge bg-{{ message.sender.isPhoneVerified ? 'success' : 'secondary' }}">
                                            Tél {{ message.sender.isPhoneVerified ? '✓' : '✗' }}
                                        </span>
                                            <span class="badge bg-{{ message.sender.isIdentityVerified ? 'success' : 'secondary' }}">
                                            ID {{ message.sender.isIdentityVerified ? '✓' : '✗' }}
                                        </span>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2 mt-3">
                                        <a href="{{ path('admin_messages_send_to_user', {id: message.sender.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-envelope"></i> Nouveau message
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
