{% extends 'base.html.twig' %}

{% block title %}Messages - Administration{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Messages</h1>
                    <span class="badge badge-primary">{{ unread_count }} non lus</span>
                </div>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                {% endfor %}

                <div class="card">
                    <div class="card-body">
                        {% if messages is empty %}
                            <div class="text-center py-5">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Aucun message pour le moment.</p>
                            </div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>Statut</th>
                                        <th>De</th>
                                        <th>Sujet</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for message in messages %}
                                        <tr class="{{ not message.isRead ? 'table-warning' : '' }}">
                                            <td>
                                                {% if not message.isRead %}
                                                    <span class="badge badge-warning">Non lu</span>
                                                {% else %}
                                                    <span class="badge badge-secondary">Lu</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if message.user.profilePicture %}
                                                        <img src="{{ message.user.profilePicture }}"
                                                             class="rounded-circle me-2"
                                                             width="30" height="30">
                                                    {% endif %}
                                                    <div>
                                                        <div class="fw-bold">{{ message.user.displayName }}</div>
                                                        <small class="text-muted">{{ message.user.email }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="fw-bold">{{ message.subject }}</div>
                                                <small class="text-muted">
                                                    {{ message.content|length > 80 ? message.content|slice(0, 80) ~ '...' : message.content }}
                                                </small>
                                            </td>
                                            <td>
                                                {% set type_classes = {
                                                    'system': 'badge-info',
                                                    'user_to_admin': 'badge-primary',
                                                    'admin_to_user': 'badge-success'
                                                } %}
                                                {% set type_labels = {
                                                    'system': 'Syst√®me',
                                                    'user_to_admin': 'Utilisateur',
                                                    'admin_to_user': 'Admin'
                                                } %}
                                                <span class="badge {{ type_classes[message.type] ?? 'badge-secondary' }}">
                                                    {{ type_labels[message.type] ?? message.type }}
                                                </span>
                                            </td>
                                            <td>
                                                <div>{{ message.createdAt|date('d/m/Y') }}</div>
                                                <small class="text-muted">{{ message.createdAt|date('H:i') }}</small>
                                            </td>
                                            <td>
                                                <a href="{{ path('admin_message_show', {id: message.id}) }}"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
